<?xml version="1.0" encoding="utf-8"?>
<manifest package="player.comet.tesla.ghostanimalplayer"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="player.comet.tesla.ghostanimalplayer.MyApplication"
        android:supportsRtl="true"
        android:sharedUserId="android.uid.system"
        android:theme="@style/AppTheme">
        <activity
            android:name="player.comet.tesla.ghostanimalplayer.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="player.comet.tesla.ghostanimalplayer.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="player.comet.tesla.ghostanimalplayer.OptionActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"/>
        <activity
            android:name="player.comet.tesla.ghostanimalplayer.Main2Activity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="player.comet.tesla.ghostanimalplayer.AboutUsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="player.comet.tesla.ghostanimalplayer.RecordsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name="player.comet.tesla.ghostanimalplayer.SettingsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>